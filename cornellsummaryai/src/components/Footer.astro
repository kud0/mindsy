---
export interface Props {
  lang?: 'en' | 'es';
  isAuthenticated?: boolean;
}

// Get props with defaults
const { lang = 'en', isAuthenticated = false } = Astro.props;

// Import translations
import { useTranslations } from '../lib/i18n';
const t = useTranslations(lang);

// Define routes based on language
const homeUrl = lang === 'es' ? '/es' : '/';
const pricingUrl = lang === 'es' ? '/es/pricing' : '/pricing';
const roadmapUrl = lang === 'es' ? '/es/roadmap' : '/roadmap';
const dashboardUrl = lang === 'es' ? '/es/dashboard' : '/dashboard';
const accountUrl = lang === 'es' ? '/es/dashboard/account' : '/dashboard/account';
const loginUrl = lang === 'es' ? '/es/auth/login' : '/auth/login';
const signupUrl = lang === 'es' ? '/es/auth/signup' : '/auth/signup';
const termsUrl = lang === 'es' ? '/es/terms' : '/terms';
const privacyUrl = lang === 'es' ? '/es/privacy' : '/privacy';
const blogUrl = '/blog'; // Blog is currently English-only

// Social media and external links
const supportEmail = 'support@mysummary.app';
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-300" role="contentinfo" aria-label="Site footer">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <!-- Company Info & Branding -->
      <div class="lg:col-span-1">
        <div class="mb-6">
          <a href={homeUrl} class="text-2xl font-bold text-white hover:text-blue-400 transition-colors" aria-label={t('footer.brand.logoAlt')}>
            MySummary APP
          </a>
          <p class="mt-3 text-sm text-gray-400 leading-relaxed">
            {t('footer.brand.description')}
          </p>
        </div>
        
        <!-- Social Links & Contact -->
        <div class="space-y-3">
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${supportEmail}`} class="text-sm text-gray-400 hover:text-white transition-colors">
              {supportEmail}
            </a>
          </div>
        </div>
      </div>

      <!-- Product Navigation -->
      <div class="lg:col-span-1">
        <h3 class="text-white font-semibold mb-4 text-sm uppercase tracking-wider">
          {t('footer.product.title')}
        </h3>
        <nav aria-label={t('footer.product.navLabel')}>
          <ul class="space-y-3">
            <li>
              <a href={homeUrl} class="text-sm text-gray-400 hover:text-white transition-colors flex items-center">
                <svg class="w-3 h-3 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                </svg>
                {t('footer.product.home')}
              </a>
            </li>
            <li>
              <a href={pricingUrl} class="text-sm text-gray-400 hover:text-white transition-colors flex items-center">
                <svg class="w-3 h-3 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                </svg>
                {t('footer.product.pricing')}
              </a>
            </li>
            <li>
              <a href={roadmapUrl} class="text-sm text-gray-400 hover:text-white transition-colors flex items-center">
                <svg class="w-3 h-3 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                {t('footer.product.roadmap')}
              </a>
            </li>
            {!isAuthenticated && (
              <li>
                <a href={signupUrl} class="text-sm text-gray-400 hover:text-white transition-colors flex items-center">
                  <svg class="w-3 h-3 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"></path>
                  </svg>
                  {t('footer.product.getStarted')}
                </a>
              </li>
            )}
            {isAuthenticated && (
              <>
                <li>
                  <a href={dashboardUrl} class="text-sm text-gray-400 hover:text-white transition-colors flex items-center">
                    <svg class="w-3 h-3 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    {t('footer.product.dashboard')}
                  </a>
                </li>
                <li>
                  <a href={accountUrl} class="text-sm text-gray-400 hover:text-white transition-colors flex items-center">
                    <svg class="w-3 h-3 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path>
                    </svg>
                    {t('footer.product.account')}
                  </a>
                </li>
              </>
            )}
          </ul>
        </nav>
      </div>

      <!-- Resources & Support -->
      <div class="lg:col-span-1">
        <h3 class="text-white font-semibold mb-4 text-sm uppercase tracking-wider">
          {t('footer.resources.title')}
        </h3>
        <nav aria-label={t('footer.resources.navLabel')}>
          <ul class="space-y-3">
            <li>
              <a href={blogUrl} class="text-sm text-gray-400 hover:text-white transition-colors flex items-center">
                <svg class="w-3 h-3 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path>
                </svg>
                {t('footer.resources.blog')}
              </a>
            </li>
            <li>
              <a href={`mailto:${supportEmail}`} class="text-sm text-gray-400 hover:text-white transition-colors flex items-center">
                <svg class="w-3 h-3 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                </svg>
                {t('footer.resources.support')}
              </a>
            </li>
            <li>
              <a href={`${pricingUrl}#faq`} class="text-sm text-gray-400 hover:text-white transition-colors flex items-center">
                <svg class="w-3 h-3 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                </svg>
                {t('footer.resources.faq')}
              </a>
            </li>
          </ul>
        </nav>
      </div>

      <!-- Legal & Language -->
      <div class="lg:col-span-1">
        <h3 class="text-white font-semibold mb-4 text-sm uppercase tracking-wider">
          {t('footer.legal.title')}
        </h3>
        <nav aria-label={t('footer.legal.navLabel')}>
          <ul class="space-y-3">
            <li>
              <a href={privacyUrl} class="text-sm text-gray-400 hover:text-white transition-colors flex items-center">
                <svg class="w-3 h-3 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                {t('footer.legal.privacy')}
              </a>
            </li>
            <li>
              <a href={termsUrl} class="text-sm text-gray-400 hover:text-white transition-colors flex items-center">
                <svg class="w-3 h-3 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
                </svg>
                {t('footer.legal.terms')}
              </a>
            </li>
          </ul>
        </nav>

        <!-- Language Switcher -->
        <div class="mt-6 pt-4 border-t border-gray-700">
          <h4 class="text-white text-xs font-semibold mb-3 uppercase tracking-wider">
            {t('footer.language.title')}
          </h4>
          <div class="flex space-x-3">
            <a 
              href={lang === 'en' ? '/' : '/'}
              class={`text-xs px-2 py-1 rounded border transition-colors ${
                lang === 'en' 
                  ? 'bg-blue-600 text-white border-blue-600' 
                  : 'text-gray-400 border-gray-600 hover:text-white hover:border-gray-500'
              }`}
              aria-label={t('footer.language.english')}
            >
              EN
            </a>
            <a 
              href={lang === 'es' ? '/es' : '/es'}
              class={`text-xs px-2 py-1 rounded border transition-colors ${
                lang === 'es' 
                  ? 'bg-blue-600 text-white border-blue-600' 
                  : 'text-gray-400 border-gray-600 hover:text-white hover:border-gray-500'
              }`}
              aria-label={t('footer.language.spanish')}
            >
              ES
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <div class="flex flex-col sm:flex-row justify-between items-center">
        <div class="text-sm text-gray-400">
          {t('footer.copyright')}
        </div>
        
        <!-- Back to Top -->
        <button 
          id="back-to-top"
          class="mt-4 sm:mt-0 text-sm text-gray-400 hover:text-white transition-colors flex items-center focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900 rounded"
          aria-label={t('footer.backToTop')}
        >
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
          </svg>
          {t('footer.backToTop')}
        </button>
      </div>
    </div>
  </div>

  <!-- Schema.org Structured Data for SEO -->
  <script type="application/ld+json" is:inline>
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "MySummary APP",
      "url": "https://mysummary.app",
      "logo": "https://mysummary.app/logo.png",
      "contactPoint": {
        "@type": "ContactPoint",
        "email": "support@mysummary.app",
        "contactType": "customer support"
      },
      "sameAs": [],
      "description": "Transform your online lectures into actionable notes instantly with AI-powered transcription and formatting."
    }
  </script>
</footer>

<style>
  /* Smooth scroll behavior for back to top */
  html {
    scroll-behavior: smooth;
  }
  
  #back-to-top {
    opacity: 0.8;
    transition: opacity 0.2s ease-in-out;
  }
  
  #back-to-top:hover {
    opacity: 1;
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Back to top functionality
    const backToTopBtn = document.getElementById('back-to-top');
    
    if (backToTopBtn) {
      backToTopBtn.addEventListener('click', (e) => {
        e.preventDefault();
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
    }
  });
</script>